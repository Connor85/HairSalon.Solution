@{
  Layout = "_Layout";
}

<h1>Specialty Search Result</h1>

@if (@Model.Count ==0)
{
  <h4>There is no specialty matched.</h4>
}

<div class="lists">
  @foreach (var specialty in Model)
  {
  <div class="foreach">
    <h4>
      <a href='/specialtys/@specialty.id'>@specialty.name</a>
    </h4>
    <a href="/specialtys/@specialty.id/update" class="btn btn-secondary">Update</a>
    <a href="/specialtys/@specialty.id/delete" class="btn btn-secondary">Delete</a>
  </div>
  }
</div>

<a href='/specialtys/new'><button class='btn btn-info'>Add Stylist</button></a>
<a href='/specialtys/'><button class='btn btn-info'>View All Stylists</button></a>
<a href="/clients"><button class="btn btn-info">View All Clients</button></a>
@Html.Partial("_SearchBar", "specialtys")
