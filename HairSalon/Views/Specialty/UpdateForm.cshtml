@{
  Layout = "_Layout";
}

<h1>Edit @Model.name</h1>
<form action="/specialtys/@Model.id/update" method="post">
  <div class="form-group">
  <label for="newName">Field of Specialty:</label>
  <input name="newName" type="text" value="@Model.name">
  </div>
  <button class="btn btn-info" type="submit">Update</button>
</form>
<a href='/'><button class='btn btn-info'>Back Home</button></a>
<a href='/specialtys'><button class='btn btn-info'>View Stylists</button></a>
