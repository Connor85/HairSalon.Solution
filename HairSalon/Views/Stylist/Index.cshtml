@{
  Layout = "_Layout";
}

<h2>Stylists</h2>

@if (@Model.Count ==0)
{
  <h4>There is no stylist was added.</h4>

  <a href='/stylists/new'><button class='btn btn-warning'>Add Stylist</button></a>
}
else
{
  @foreach (var stylist in Model)
  {
  <h4>
    <a href='/stylists/@stylist.id'>@stylist.name</a>
  </h4>
  <p>Income: @stylist.income</p>
  <p><a href="/stylists/@stylist.id/update" class="btn btn-secondary">Update</a></p>
  <p><a href="/stylists/@stylist.id/delete" class="btn btn-secondary">Delete</a></p>
  }

  <a href='/stylists/new'><button class='btn btn-warning'>Add Stylist</button></a>
  <a href="/allitems"><button class="btn btn-primary">View All Clients</button></a>
}
