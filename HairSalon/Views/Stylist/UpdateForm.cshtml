@{
  Layout = "_Layout";
}

<h2>Edit @Model.name</h2>
<form action="/stylists/@Model.id/update" method="post">
    <label for="newName">Name:</label>
    <input name="newName" type="text" value="@Model.name">

    <label for="newIncome">Income:</label>
    <input name="newIncome" type="text" value="@Model.income">
    <button class="btn btn-danger" type="submit">Update</button>
</form>
<a href='/'><button class='btn btn-success'>Back Home</button></a>
